%h2 Forgot your password?
= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form-horizontal" }) do |f|
  - if resource.errors.any?
    .alert.alert-danger= devise_error_messages!

  .form-group 
    = f.label :email, :class => "col-md-2 control-label"
    .col-md-6
      = f.email_field :email, :autofocus => true, :class => "form-control"
  .form-group.actions
    .col-md-offset-2.col-md-6
      = f.submit "Reset Password", :class => "btn btn-primary"
      = render "devise/shared/links"
